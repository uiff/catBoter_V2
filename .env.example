# CatBoter V3 - Umgebungsvariablen
# Kopiere diese Datei zu .env und passe die Werte an

# Backend Konfiguration
FLASK_ENV=production
FLASK_APP=main.py
FLASK_DEBUG=0

# Datenbank / Storage
DATA_DIR=/app/data
FEEDING_PLAN_DIR=/app/feedingPlan

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/catboter.log

# Hardware Konfiguration (Raspberry Pi)
GPIO_ENABLED=true
I2C_ENABLED=true

# Netzwerk
BACKEND_PORT=5000
FRONTEND_PORT=80

# Security (für Produktion ändern!)
SECRET_KEY=change-this-in-production
API_KEY=your-api-key-here

# Optional: InfluxDB (falls verwendet)
INFLUX_ENABLED=false
INFLUX_URL=http://localhost:8086
INFLUX_TOKEN=your-token
INFLUX_ORG=catboter
INFLUX_BUCKET=sensors
